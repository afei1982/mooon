include $(top_srcdir)/Make.rules
AUTOMAKE_OPTIONS= foreign

INCLUDES   +=
LDADD      += -L../util -lutil -L../sys -lsys -L../net -lnet
AM_LDFLAGS  += -fPIC -shared
AM_CXXFLAGS += -fPIC

moduledir=$(prefix)/lib
module_PROGRAMS = libgtf.so

libgtf_so_SOURCES =

install-data-hook:
	mkdir -p $(prefix)/include&&cp -r $(top_srcdir)/../include/gtf $(prefix)/include/

uninstall-hook:
	rm -fr $(prefix)/include/gtf